<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.maxim.controllers.WordsEditor"
      prefHeight="50" prefWidth="100" alignment="CENTER" spacing="5">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TextField fx:id="textField"/>

    <HBox spacing="5" alignment="CENTER">
        <Button fx:id="removeButton" text="remove" onAction="#removeWord"/>
        <Button fx:id="addButton" text="add" onAction="#addWord"/>
    </HBox>
</VBox>
